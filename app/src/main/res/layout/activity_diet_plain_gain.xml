                            app:layout_constraintBottom_toTopOf="@+id/frameLayout18"
                            app:layout_constraintEnd_toEndOf="@+id/frameLayout18"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="@+id/frameLayout18"
                            app:layout_constraintTop_toBottomOf="@+id/frameLayout17">

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
